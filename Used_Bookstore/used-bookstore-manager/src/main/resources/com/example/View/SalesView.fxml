<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controller.SalesController"
            style="-fx-background-color: #f9f9fb;">

    <!-- Header -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 20 30; -fx-background-color: white;">
            <Label text="🛒 Bán sách" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">

            <!-- Book Selection -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Sách:"/>
                <ComboBox fx:id="bookCombo" prefWidth="200" promptText="Chọn sách"/>
                <Label text="Số lượng:"/>
                <TextField fx:id="quantityField" prefWidth="60"/>
                <Button text="➕ Thêm" onAction="#handleAddItem"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
            </HBox>

            <!-- Cart Table -->
            <TableView fx:id="orderTable" prefHeight="200">
                <columns>
                    <TableColumn fx:id="colBookTitle" text="Tên sách" prefWidth="200"/>
                    <TableColumn fx:id="colQuantity" text="Số lượng" prefWidth="100"/>
                    <TableColumn fx:id="colUnitPrice" text="Đơn giá" prefWidth="100"/>
                    <TableColumn fx:id="colTotalPrice" text="Thành tiền" prefWidth="120"/>
                </columns>
            </TableView>

            <!-- Delete Item Button -->
            <Button fx:id="deleteItemButton" text="🗑️ Xóa sách" onAction="#handleDeleteItem"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>

            <!-- Customer Info -->
            <GridPane hgap="10" vgap="10" style="-fx-padding: 10;">
                <columnConstraints>
                    <ColumnConstraints minWidth="120"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Tên khách hàng:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Số điện thoại:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="phoneField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Địa chỉ:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="addressField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Loại đơn:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <ComboBox fx:id="orderTypeCombo" promptText="Chọn loại đơn hàng"
                          prefWidth="200" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Total + Submit -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Tổng tiền:"/>
                <Label fx:id="totalLabel" text="0 VNĐ" style="-fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="💾 Xác nhận đơn hàng" onAction="#handleSubmitOrder"
                        style="-fx-background-color: #2980b9; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
