<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controller.SalesController"
            style="-fx-background-color: #f4f6fa;">

    <!-- Header -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-padding: 25 30; -fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
            <Label text="🛒 Bán sách"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="25" style="-fx-padding: 30;">

            <!-- Book Selection -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Sách:" style="-fx-font-size: 14px;"/>
                <ComboBox fx:id="bookCombo" prefWidth="220" promptText="Chọn sách"
                          style="-fx-background-radius: 6; -fx-border-radius: 6;"/>
                <Label text="Số lượng:" style="-fx-font-size: 14px;"/>
                <TextField fx:id="quantityField" prefWidth="70"
                           style="-fx-background-radius: 6; -fx-border-radius: 6;"/>
                <Button text="➕ Thêm" onAction="#handleAddItem"
                        style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;"/>
            </HBox>

            <!-- Cart Table -->
            <TableView fx:id="orderTable" prefHeight="250"
                       style="-fx-background-radius: 8; -fx-border-color: #dcdde1; -fx-border-radius: 8;">
                <columns>
                    <TableColumn fx:id="colBookTitle" text="Tên sách" prefWidth="220"/>
                    <TableColumn fx:id="colQuantity" text="Số lượng" prefWidth="100"/>
                    <TableColumn fx:id="colUnitPrice" text="Đơn giá" prefWidth="110"/>
                    <TableColumn fx:id="colTotalPrice" text="Thành tiền" prefWidth="130"/>
                </columns>
            </TableView>

            <!-- Delete Item Button -->
            <Button fx:id="deleteItemButton" text="🗑️ Xóa sách" onAction="#handleDeleteItem"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;"/>

            <!-- Customer Info -->
            <VBox spacing="12" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-color: #e0e0e0;">
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="130"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="👤 Tên khách hàng:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="📞 Số điện thoại:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="phoneField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="✉️ Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="🏠 Địa chỉ:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="addressField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="📦 Loại đơn:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="orderTypeCombo" promptText="Chọn loại đơn"
                              prefWidth="200" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>

            <!-- Total + Submit -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="💰 Tổng tiền:" style="-fx-font-size: 16px;"/>
                <Label fx:id="totalLabel" text="0 VNĐ"
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2980b9;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="💾 Xác nhận đơn hàng" onAction="#handleSubmitOrder"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
