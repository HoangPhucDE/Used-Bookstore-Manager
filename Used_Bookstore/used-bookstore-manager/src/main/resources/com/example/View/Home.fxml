<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="rootPane"
            fx:controller="com.example.controller.HomeController"
            style="-fx-background-color: #f5f6fa;">

    <!-- Header Section -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20"
              style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-padding: 15 25;">
            <Label text="📚 Used Book Management System"
                   textFill="white"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <HBox alignment="CENTER" spacing="15">
                <Label fx:id="usernameLabel" text="👤 Admin"
                       textFill="white"
                       style="-fx-font-size: 14px;"/>
                <Button text="🚪 Đăng xuất" onAction="#logout"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 24; -fx-padding: 7 10; -fx-font-size: 14px; -fx-font-weight: 500;"/>
            </HBox>
        </HBox>
    </top>

    <!-- Sidebar Navigation -->
    <left>
        <VBox fx:id="sidebar" spacing="8" prefWidth="270"
              style="-fx-background-color: #ffffff; -fx-padding: 20 15;">

            <Button fx:id="homeBtn" text="🏠 Trang chủ" onAction="#goHome"
                    style="-fx-background-color: transparent; -fx-text-fill: #2c3e50; -fx-background-radius: 8; -fx-padding: 10 18; -fx-font-size: 14px; -fx-font-weight: 500; -fx-alignment: center-left;" prefWidth="250"/>

            <Button fx:id="bookBtn" text="📖 Quản lý sách" onAction="#goBook"
                    style="-fx-background-color: transparent; -fx-text-fill: #2c3e50; -fx-background-radius: 8; -fx-padding: 10 18; -fx-font-size: 14px; -fx-font-weight: 500; -fx-alignment: center-left;" prefWidth="250"/>

            <Button fx:id="orderStatusBtn" text="📦 Quản lý đơn hàng" onAction="#goOrders"
                    style="-fx-background-color: transparent; -fx-text-fill: #2c3e50; -fx-background-radius: 8; -fx-padding: 10 18; -fx-font-size: 14px; -fx-font-weight: 500; -fx-alignment: center-left;" prefWidth="250"/>

            <Button fx:id="salesBtn" text="🛒 Bán hàng" onAction="#goSales"
                    style="-fx-background-color: transparent; -fx-text-fill: #2c3e50; -fx-background-radius: 8; -fx-padding: 10 18; -fx-font-size: 14px; -fx-font-weight: 500; -fx-alignment: center-left;" prefWidth="250"/>

            <Button fx:id="employeeBtn" text="👥 Quản lý nhân viên" onAction="#goEmployee"
                    style="-fx-background-color: transparent; -fx-text-fill: #2c3e50; -fx-background-radius: 8; -fx-padding: 10 18; -fx-font-size: 14px; -fx-font-weight: 500; -fx-alignment: center-left;" prefWidth="250"/>

            <Button fx:id="userBtn" text="🧑‍💼 Quản lý khách hàng" onAction="#goUser"
                    style="-fx-background-color: transparent; -fx-text-fill: #2c3e50; -fx-background-radius: 8; -fx-padding: 10 18; -fx-font-size: 14px; -fx-font-weight: 500; -fx-alignment: center-left;" prefWidth="250"/>

            <Button fx:id="statsBtn" text="📊 Thống kê doanh thu" onAction="#goStats"
                    style="-fx-background-color: transparent; -fx-text-fill: #2c3e50; -fx-background-radius: 8; -fx-padding: 10 18; -fx-font-size: 14px; -fx-font-weight: 500; -fx-alignment: center-left;" prefWidth="250"/>

            <Separator style="-fx-padding: 15 0;"/>

        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <BorderPane style="-fx-background-color: #f5f6fa;">
            <center>
                <StackPane fx:id="contentPane" style="-fx-background-color: white; -fx-background-radius: 10;">
                    <padding>
                        <Insets top="30" right="30" bottom="30" left="30"/>
                    </padding>
                    <VBox alignment="CENTER" spacing="20">
                        <Label text="🎉" style="-fx-font-size: 48px;"/>
                        <Label text="Chào mừng đến với Hệ thống Quản lý Thư viện"
                               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label text="Chọn một mục từ menu bên trái để bắt đầu"
                               style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                    </VBox>
                </StackPane>
            </center>
        </BorderPane>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20"
              style="-fx-background-color: #ecf0f1; -fx-padding: 8 25; -fx-border-color: #bdc3c7; -fx-border-width: 1 0 0 0;">
            <Label text="📡 Trạng thái: Kết nối" style="-fx-font-size: 11px; -fx-text-fill: #27ae60;"/>
            <Separator orientation="VERTICAL" prefHeight="15"/>
            <Label text="🕐 Cập nhật lần cuối: Hôm nay lúc 14:30" style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="v2.1.0" style="-fx-font-size: 11px; -fx-text-fill: #95a5a6;"/>
        </HBox>
    </bottom>

</BorderPane>