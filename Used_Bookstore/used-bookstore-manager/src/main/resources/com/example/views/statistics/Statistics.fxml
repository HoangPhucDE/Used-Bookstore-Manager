<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:controller="com.example.controller.statistcs.StatisticsController"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="900" prefHeight="700"
            style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef);">

    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" spacing="20"
                  style="-fx-background-color: white; -fx-padding: 20;">
                <Label text="📊 Thống kê doanh thu"
                       style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <HBox spacing="15" alignment="CENTER_RIGHT">
                    <Button text="📈 Xuất Excel" onAction="#handleExportExcel"
                            style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;
                                   -fx-padding: 10 20; -fx-background-radius: 25; -fx-border-radius: 25;
                                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2); -fx-cursor: hand;"/>
                    <Button text="📄 Xuất PDF" onAction="#handleExportPDF"
                            style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold;
                                   -fx-padding: 10 20; -fx-background-radius: 25; -fx-border-radius: 25;
                                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2); -fx-cursor: hand;"/>
                </HBox>
            </HBox>
            <Separator style="-fx-background-color: #dee2e6;"/>
        </VBox>
    </top>

    <center>
        <TabPane style="-fx-background-color: transparent; -fx-padding: 20;">
            <!-- 📅 Theo thời gian -->
            <Tab text="📅 Theo thời gian" closable="false">
                <VBox spacing="15"
                      style="-fx-background-color: white; -fx-background-radius: 10;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Doanh thu theo ngày"
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #495057;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label text="💰" style="-fx-font-size: 20px;"/>
                    </HBox>
                    <Separator style="-fx-background-color: #e9ecef;"/>
                    <TableView fx:id="timeTable" style="-fx-background-color: transparent; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
                        <columns>
                            <TableColumn text="📅 Ngày" fx:id="dateCol" prefWidth="200" style="-fx-alignment: CENTER;"/>
                            <TableColumn text="🧾 Số hóa đơn" fx:id="invoiceCountCol" prefWidth="180" style="-fx-alignment: CENTER;"/>
                            <TableColumn text="💰 Doanh thu (VNĐ)" fx:id="totalRevenueCol" prefWidth="250" style="-fx-alignment: CENTER_RIGHT;"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- 📚 Theo sản phẩm -->
            <Tab text="📚 Theo sản phẩm" closable="false">
                <VBox spacing="15"
                      style="-fx-background-color: white; -fx-background-radius: 10;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Thống kê bán hàng theo sách"
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #495057;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label text="📖" style="-fx-font-size: 20px;"/>
                    </HBox>
                    <Separator style="-fx-background-color: #e9ecef;"/>
                    <TableView fx:id="bookTable" style="-fx-background-color: transparent; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
                        <columns>
                            <TableColumn text="📚 Tên sách" fx:id="bookNameCol" prefWidth="300" style="-fx-alignment: CENTER_LEFT;"/>
                            <TableColumn text="🔢 Số lượng bán" fx:id="quantityCol" prefWidth="150" style="-fx-alignment: CENTER;"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- 👥 Theo nhân viên -->
            <Tab text="👥 Theo nhân viên" closable="false">
                <VBox spacing="15"
                      style="-fx-background-color: white; -fx-background-radius: 10;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Hiệu suất bán hàng nhân viên"
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #495057;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label text="👨‍💼" style="-fx-font-size: 20px;"/>
                    </HBox>
                    <Separator style="-fx-background-color: #e9ecef;"/>
                    <TableView fx:id="employeeTable" style="-fx-background-color: transparent; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
                        <columns>
                            <TableColumn text="👤 Tên nhân viên" fx:id="employeeNameCol" prefWidth="200" style="-fx-alignment: CENTER_LEFT;"/>
                            <TableColumn text="💰 Tổng doanh thu" fx:id="employeeRevenueCol" prefWidth="180" style="-fx-alignment: CENTER_RIGHT;"/>
                            <TableColumn text="🧾 Số hóa đơn" fx:id="employeeInvoiceCol" prefWidth="120" style="-fx-alignment: CENTER;"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
