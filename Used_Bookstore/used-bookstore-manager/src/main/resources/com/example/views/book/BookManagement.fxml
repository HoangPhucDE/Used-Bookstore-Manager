<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.controller.book.BookManagementController"
            style="-fx-background-color: #f9f9fb;">

    <!-- Header -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-padding: 20 30; -fx-background-color: white;">
            <Label text="📚 Quản lý Sách"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- Search + Add -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField"
                           promptText="🔍 Tìm sách theo tên hoặc tác giả"
                           style="-fx-pref-width: 300; -fx-background-radius: 8;" />
                <Button text="Tìm kiếm" onAction="#searchBook"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8;" />
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="addBookBtn" text="➕ Thêm sách" onAction="#showAddBookDialog"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 8;" />
            </HBox>

            <!-- Table -->
            <TableView fx:id="bookTable" prefHeight="550"
                       style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 2);">
                <columns>
                    <TableColumn fx:id="colId" text="🆔 ID" prefWidth="60"/>
                    <TableColumn fx:id="colTitle" text="📖 Tên sách" prefWidth="200"/>
                    <TableColumn fx:id="colAuthor" text="✍ Tác giả" prefWidth="160"/>
                    <TableColumn fx:id="colCategory" text="📚 Thể loại" prefWidth="120"/>
                    <TableColumn fx:id="colImportPrice" text="💰 Giá nhập" prefWidth="100"/>
                    <TableColumn fx:id="colPrice" text="💲 Giá bán" prefWidth="100"/>
                    <TableColumn fx:id="colStock" text="📦 Tồn kho" prefWidth="90"/>
                    <TableColumn fx:id="colRating" text="⭐ Đánh giá" prefWidth="90"/>
                    <TableColumn fx:id="colActions" text="⚙️ Hành động" prefWidth="160"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
